---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import ContactBlock from '../../components/ContactBlock.astro';
import { getSiteData } from '../../data/load';
import { getAssetPath } from '../../utils/paths';
import servicesHeroImage from '../../assets/images/hero/services-hero.jpg';

const data = await getSiteData();
const { services } = data;

const pageTitle = '提供サービス';
const pageDescription = '移動支援・行動援護・指定特定相談支援の3つのサービスを提供しています。ご利用者様の地域生活や社会参加をサポートします。';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Hero
    title={pageTitle}
    description={pageDescription}
    image={servicesHeroImage}
    imageAlt="寄り添う支援の様子"
    size="sm"
  />

  <div class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto space-y-16">
        {services.map(service => (
          <section
            id={service.id}
            class="scroll-mt-20"
            aria-labelledby={`${service.id}-title`}
          >
            <div class="card">
              <h2 id={`${service.id}-title`} class="text-2xl md:text-3xl font-bold mb-6">
                {service.title}
              </h2>
              <p class="text-gray-600 whitespace-pre-wrap">{service.description}</p>
              <div class="mt-6">
                <a
                  href={getAssetPath(`/services/#${service.id}`)}
                  class="btn-primary"
                >
                  サービス詳細を見る
                </a>
              </div>
            </div>
          </section>
        ))}
      </div>
    </div>
  </div>

  <ContactBlock />
</BaseLayout>
