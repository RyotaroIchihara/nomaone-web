---
import { getAssetPath } from '../utils/paths';

interface Props {
  id: string;
  title: string;
  description: string;
  icon?: 'move' | 'support' | 'consult';
}

const { id, title, description, icon = 'move' } = Astro.props;

const icons = {
  move: `<svg
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="w-6 h-6"
  >
    <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"/>
    <path d="m17 4 3 3"/>
    <path d="m17 7 3 -3"/>
    <path d="m19 11 2 -2"/>
    <path d="m19 13 2 2"/>
  </svg>`,
  support: `<svg
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="w-6 h-6"
  >
    <path d="M14 19a6 6 0 0 0-12 0"/>
    <circle cx="8" cy="9" r="4"/>
    <path d="M22 19a6 6 0 0 0-6-6 4 4 0 1 0 0-8"/>
  </svg>`,
  consult: `<svg
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="w-6 h-6"
  >
    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
  </svg>`,
};
---

<div id={id} class="card hover:shadow-md transition-shadow">
  <div class="text-primary-600 mb-4">
    <Fragment set:html={icons[icon]} />
  </div>
  <h3 class="text-xl font-bold mb-3">{title}</h3>
  <p class="text-gray-600">{description}</p>
  <a href={getAssetPath(`/services/${id}`)} class="mt-4 inline-block text-primary-600 hover:text-primary-500">
    詳しく見る
    <span class="sr-only">「{title}」について</span>
  </a>
</div>
