---
import { getSiteData } from '../data/load';
import { formatPhoneForDisplay, formatPhoneForTel } from '../utils/format';

const siteData = await getSiteData();
const { contact, office, recruit } = siteData;
const { tel_fax } = office.contacts;

interface Props {
  showRecruitButton?: boolean;
}

const { showRecruitButton = true } = Astro.props;
---

<div class="bg-gray-50 py-12 md:py-16">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-6">お問い合わせ</h2>
      <p class="text-gray-600 mb-8">{contact.note}</p>
      
      <div class="grid gap-4 md:grid-cols-2 mb-8">
        <!-- お問い合わせフォーム -->
        <a
          href={contact.inquiry_url}
          class="btn-primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          フォームで問い合わせ
          <svg
            class="w-5 h-5 ml-2"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M7 17l9.2-9.2M17 17V7H7"/>
          </svg>
        </a>

        <!-- ヘルパー登録 -->
        {showRecruitButton && (
          <a href={recruit.url} class="btn-secondary" target="_blank" rel="noopener noreferrer">
            ヘルパー登録について
            <svg
              class="w-5 h-5 ml-2"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        )}
      </div>

      <!-- その他の連絡手段 -->
      <div class="text-center space-y-4">
        <a
          href={`mailto:${contact.email}`}
          class="inline-flex items-center text-primary-600 hover:text-primary-500"
        >
          <svg
            class="w-5 h-5 mr-2"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect width="20" height="16" x="2" y="4" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          {contact.email}
        </a>

        <a
          href={formatPhoneForTel(tel_fax)}
          class="inline-flex items-center text-primary-600 hover:text-primary-500"
        >
          <svg
            class="w-5 h-5 mr-2"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          {formatPhoneForDisplay(tel_fax)}
        </a>
      </div>
    </div>
  </div>
</div>
