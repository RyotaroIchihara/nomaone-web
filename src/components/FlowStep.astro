---
interface Props {
  no: number;
  title: string;
  detail: string;
}

const { no, title, detail } = Astro.props;
---

<div class="relative pl-12 pb-8 last:pb-0">
  <!-- ステップ番号 -->
  <div class="absolute left-0 top-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold">
    {no}
  </div>
  
  <!-- 縦線 -->
  <div class="absolute left-4 top-8 bottom-0 w-0.5 bg-gray-200 last:hidden"></div>
  
  <!-- コンテンツ -->
  <div class="pt-1">
    <h3 class="text-lg font-bold mb-2">{title}</h3>
    <p class="text-gray-600">{detail}</p>
  </div>
</div>
